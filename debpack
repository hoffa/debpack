#!/usr/bin/env bash
set -euo pipefail

# Only output color if stdout is a TTY
color_echo() {
    if [[ -t 1 ]]; then
        printf "\e[$1m==> %s\e[0m\n" "$2"
    else
        echo "==> $2"
    fi
}

red() {
    color_echo "1;31" "$1"
}

green() {
    color_echo "1;32" "$1"
}

yellow() {
    color_echo "1;33" "$1"
}

cleanup() {
    if [[ -d .debpack ]]; then
        rm -r .debpack
    fi
}

parse_control_field() {
    key=$(echo "$1" | cut -d: -f1)
    value=$(echo "$1" | cut -d: -f2- | sed "s/^[[:space:]]*//")
    if [[ $1 != *:* ]] || [[ -z $key ]] || [[ -z $value ]]; then
        red "Invalid format: $1"
        exit 1
    fi
}

# https://www.debian.org/doc/debian-policy/ch-files.html#permissions-and-owners
debianize_perms() {
    find "$1" | while read -r filename; do
        if [[ -d ${filename} ]] || [[ -x ${filename} ]]; then
            chmod 0755 "${filename}"
        elif [[ -f ${filename} ]]; then
            chmod 0644 "${filename}"
        fi
    done
}

patch_control() {
    parse_control_field "$2"
    grep -Fiv "${key}:" "$1" > "$1.tmp" || true
    echo "${key}: ${value}" >> "$1.tmp"
    mv "$1.tmp" "$1"
}

patch_control_if_missing() {
    parse_control_field "$2"
    if ! grep -Fi "${key}:" "$1"; then
        echo "${key}: ${value}" >> "$1"
    fi
}

build() {
    cleanup
    dst_debian=.debpack/DEBIAN
    mkdir -p "${dst_debian}"

    # Allow building packages by only specifying fields through the command line
    green "Copying control file"
    dst_control=${dst_debian}/control
    src_control=${src_debian}/control
    if [[ ! -f ${src_control} ]]; then
        yellow "${src_control} not found; assuming empty"
        src_control=/dev/null
    fi
    cp -v "${src_control}" "${dst_control}"

    green "Patching control file"
    for field in "$@"; do
        patch_control "${dst_control}" "${field}"
    done
    patch_control_if_missing "${dst_control}" Priority:optional
    patch_control_if_missing "${dst_control}" Section:misc
    diff -u "${src_control}" "${dst_control}" || true

    green "Copying maintainer scripts"
    for file in preinst postinst prerm postrm; do
        if [[ -f ${src_debian}/${file} ]]; then
            cp -v "${src_debian}/${file}" "${dst_debian}"
        fi
    done

    green "Copying files"
    # Don't allow empty packages
    if [[ ! -f ${debpackfile_path} ]]; then
        red "Debpackfile not found"
        exit 1
    fi
    while IFS= read -r line || [[ -n ${line} ]]; do
        # Ignore if empty
        if [[ -z ${line} ]]; then
            continue
        fi
        # Make sure we have a tab character
        if [[ ${line} != *$(printf "\t")* ]]; then
            red "Invalid format: ${line}"
            exit 1
        fi
        src=$(echo "${line}" | cut -f1)
        dst=.debpack$(echo "${line}" | cut -f2)
        mkdir -p "${dst%/*}"
        # Allow source wildcards
        # shellcheck disable=SC2086
        cp -v ${src} "${dst}"
    done < "${debpackfile_path}"

    green "Fixing permissions"
    debianize_perms .debpack

    green "Building package"
    fakeroot dpkg-deb --build .debpack

    dpkg-deb --info .debpack.deb
    dpkg --contents .debpack.deb
    dpkg-name --overwrite .debpack.deb

    cleanup
    green "Done"
}

print_usage() {
    cat << EOF
Usage: debpack [-h] [options] [fields...]

Super simple Debian packages.

Options:
  -h       Show this message
  -d PATH  Control files directory (default: debian)
  -f FILE  Debpackfile path (default: Debpackfile)

The package control file can be modified at build-time by
specifying fields in the key:value format. For example:

  debpack Version:1.0 Architecture:i386
EOF
}

debpackfile_path=Debpackfile
src_debian=debian

while getopts ":hf:d:" opt; do
    case ${opt} in
        h)
            print_usage
            exit
            ;;
        f)
            debpackfile_path=${OPTARG}
            ;;
        d)
            src_debian=${OPTARG}
            ;;
        \?|*)
            print_usage
            exit 1
            ;;
    esac
done

# Unprocessed opts are control fields
shift $(( OPTIND - 1 ))
build "$@"
